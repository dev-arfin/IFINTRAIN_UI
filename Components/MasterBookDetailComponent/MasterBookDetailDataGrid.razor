

<RadzenStack Gap="16">
  <DataGrid ID="MasterBookDetailDataGrid" @ref="@dataGrid" TItem="JsonObject" LoadData="LoadData" AllowSelected="true" 
    RowLink=@(row => $"/setting/book/{BookID}/bookdetail/{row["ID"]}")>
    <!-- #region Toolbar -->
    <Buttons>
      <RadzenRow Gap="8">
        <RoleAccess Code="RC0003838">
        @* Belum di set untuk RoleCode *@
          <Button ButtonStyle="ButtonStyle.Info" Text="Add" Icon="add" Click="Add" />
        </RoleAccess>

        <RoleAccess Code="RD0000966">
        @* Belum di set untuk RoleCode *@
          <Button ButtonStyle="ButtonStyle.Danger" Text="Delete" Icon="delete" Click="Delete" />
        </RoleAccess>
      </RadzenRow>
    </Buttons>
    <!-- #endregion -->

    <!-- #region Columns -->
    <Columns>
    <DataGridColumn TItem="JsonObject" Property="EffDate" Title="Effective Date" Width="50%" />
      <DataGridColumn TItem="JsonObject" Property="RentAmount" Title="Rent Amount" Width="25%" Format="N2"/>
      <DataGridColumn TItem="JsonObject" Property="LateChargeAmount" Title="Late Charge Amount" Width="25%" Format="N2"/>
    </Columns>
    <!-- #endregion -->
  </DataGrid>
</RadzenStack>

