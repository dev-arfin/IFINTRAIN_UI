<!-- #region Form -->
<TemplateForm>
  <RadzenStack Gap="16">
    <!-- #region Toolbar -->
    <RadzenRow Gap="8">
      <Button ButtonStyle="ButtonStyle.Danger" Text="Back" Icon="arrow_back" Click="@Back" />
      <Locker />
    </RadzenRow>
    <!-- #endregion -->

    <RadzenStack Gap="8">
      <RadzenRow Gap="32">
        <!-- #region Code -->
        <FormFieldTextBox Label="Book Title" Name="BookTitle" Value="@(row["BookTitle"]?.GetValue<string>())" Required="true" Disabled/>
        <FormFieldTextBox Label="Author" Name="Author" Value="@(row["Author"]?.GetValue<string>())" Required="true" Disabled/>
        <FormFieldTextBox Label="Publisher" Name="Publisher" Value="@(row["Publisher"]?.GetValue<string>())" Required="true" Disabled/>
        <!-- #endregion -->

      </RadzenRow>

      <RadzenRow Gap="32">
        <!-- #region Address -->
        <FormFieldNumeric Label="Quantity" Name="TotalBook" Value="@(row["TotalBook"]?.GetValue<int>())" Required="true" Disabled/>
        <!-- #endregion -->
      </RadzenRow>
    </RadzenStack>
  </RadzenStack>
</TemplateForm>
<!-- #endregion -->