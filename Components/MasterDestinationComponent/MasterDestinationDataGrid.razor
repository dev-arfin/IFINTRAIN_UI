<RadzenStack Gap="16">
  <DataGrid ID="MasterDestinationDataGrid" @ref="@dataGrid" TItem="JsonObject" LoadData="LoadData" AllowSelected="true" 
    RowLink=@(row => $"setting/destination/{row["ID"]}")>
    <!-- #region Toolbar -->
    <Buttons>
      <RadzenRow Gap="8">
        <RoleAccess Code="RC0004022">
          <Button ButtonStyle="ButtonStyle.Info" Text="Add" Icon="add" Click="@Add" />
        </RoleAccess>

        <RoleAccess Code="RD0001015">
          <Button ButtonStyle="ButtonStyle.Danger" Text="Delete" Icon="delete" Click="@Delete" />
        </RoleAccess>
      </RadzenRow>
    </Buttons>
    <!-- #endregion -->

    <!-- #region Columns -->
    <Columns>
    <DataGridColumn TItem="JsonObject" Property="Code" Title="Code" Width="30%" />
      <DataGridColumn TItem="JsonObject" Property="DestinationName" Title="Destination Name" Width="40%"  />
      <DataGridColumn TItem="JsonObject" Property="IsActive" Title="Active" Width="30%" Format="YN"/>
    </Columns>
    <!-- #endregion -->
  </DataGrid>
</RadzenStack>

