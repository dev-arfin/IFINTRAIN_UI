<RadzenStack Gap="16">
  <DataGrid ID="MasterBorrowerDataGrid" @ref="@dataGrid" TItem="JsonObject" LoadData="LoadData" AllowSelected="true" 
    RowLink=@(row => $"{BASE_ROUTE}/{row["ID"]}")>
    <!-- #region Toolbar -->
    <Buttons>
      <RadzenRow Gap="8">
        <RoleAccess Code="RC0003838">
          <Button ButtonStyle="ButtonStyle.Info" Text="Add" Icon="add" Click="Add" />
        </RoleAccess>

        <RoleAccess Code="RD0000966">
          <Button ButtonStyle="ButtonStyle.Danger" Text="Delete" Icon="delete" Click="Delete" />
        </RoleAccess>
      </RadzenRow>
    </Buttons>
    <!-- #endregion -->

    <!-- #region Columns -->
    <Columns>
    <DataGridColumn TItem="JsonObject" Property="Code" Title="Code" Width="25%" />
      <DataGridColumn TItem="JsonObject" Property="IDNo" Title="KTP No" Width="25%" />
      <DataGridColumn TItem="JsonObject" Property="Name" Title="Name" Width="25%" />
      <DataGridColumn TItem="JsonObject" Property="Address" Title="Address" Width="25%" />
    </Columns>
    <!-- #endregion -->
  </DataGrid>
</RadzenStack>

