<RadzenStack Gap="16">
  <DataGrid ID="MasterBusDataGrid" @ref="@dataGrid" TItem="JsonObject" LoadData="LoadData" AllowSelected="true" 
    RowLink=@(row => $"setting/bus/{row["ID"]}")>
    <!-- #region Toolbar -->
    <Buttons>
      <RadzenRow Gap="8">
        <RoleAccess Code="RC0004023">
          <Button ButtonStyle="ButtonStyle.Info" Text="Add" Icon="add" Click="@Add" />
        </RoleAccess>

        <RoleAccess Code="RD0001016">
          <Button ButtonStyle="ButtonStyle.Danger" Text="Delete" Icon="delete" Click="@Delete" />
        </RoleAccess>
      </RadzenRow>
    </Buttons>
    <!-- #endregion -->

    <!-- #region Columns -->
    <Columns>
    <DataGridColumn TItem="JsonObject" Property="Code" Title="Code" Width="20%" />
      <DataGridColumn TItem="JsonObject" Property="BusName" Title="Bus Name" Width="20%" />
      <DataGridColumn TItem="JsonObject" Property="PicName" Title="PIC" Width="20%" />
      <DataGridColumn TItem="JsonObject" Property="EffDate" Title="Eff Date" Width="20%" />
      <DataGridColumn TItem="JsonObject" Property="ExpDate" Title="Exp Date" Width="20%" />
    </Columns>
    <!-- #endregion -->
  </DataGrid>
</RadzenStack>

