@page "/inquiry/inquirybook/{ID}"
@using IFinancing360_TRAINING_UI.Components.BookHistoryComponent
@using IFinancing360_TRAINING_UI.Components.PanelMenuComponent

<Title Text="Inquiry Book Info"/>

@if (ID != null) {

<PanelMenuBook UserID=@ID>
    <PageContainer>
        <PageLock>
            <BookHistoryForm ID=@ID ParentMenuURL=@ParentMenuURL/>
        </PageLock>
    </PageContainer>
</PanelMenuBook>
}
else {
    <PageContainer>
        <BookHistoryForm ID=@ID ParentMenuURL=@ParentMenuURL />
    </PageContainer>
}

